<h1>New Post</h1>
<!-- to do: if not logged in, redirect to login page, maybe put in a helper -->

<%= form_for :post, :html => {class: 'form-horizontal post-form'}, :url => posts_path do |f| %>

  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :title, class: 'form-control', :required => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: 'col-sm-2 control-label' %>
    <div class="col-sm-9">
      <%= f.text_area :content, class: 'form-control', :required => true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Post", class: 'btn btn-default' %>
    </div>
  </div>

<% end %>
